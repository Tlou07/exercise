
public class NumbersDemo {

    public static void main(String[] args) {
        int number1=5;
        int number2=15;

    displayTwiceNumber(number1);
    displayTwiceNumber(number2);
    
    displayNumberPlusFive(number1);
    displayNumberPlusFive(number2);
    
    displayNumberSquared(number1);
    displayNumberSquared(number2);
    


    }
    public static void displayTwiceNumber(int num){
    System.out.println(num +"twice is"+ num *2);
    }
    public static void displayNumberPlusFive(int num){
    System.out.println(num + "plus five is "+num+5);
    }
    public static void displayNumberSquared(int num){ 
    System.out.println(num + "squared is"+ num* num);
    }
            
}
